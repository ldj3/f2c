/* pages/carts/carts.wxss */
.carts {
  padding-top: 90rpx;
  padding-bottom: 120rpx;
}
.get_coupon {
  position: fixed;
  top: 25rpx;
  right: 30rpx;
}
.get_coupon navigator {
  font-size: 28rpx;
  border: 2rpx solid #ed5027;
  color: #ed5027;
  border-radius: 10rpx;
}
.carts_goods_img {
  display: block;
  width: 150rpx;
  height: 150rpx;
  overflow: hidden;
  border: 2rpx solid #ddd;
  margin-left: 15rpx;
}
.carts_goods_img image { 
  width: 100%;
  height: 100%;
}
.carts_goods_box {
  display: inline-block;
}
.carts_box {
  position: relative;
  display: flex;
  flex-direction:row;
  overflow: hidden;
  border-bottom: 2rpx solid #ddd;
  padding: 20rpx 15rpx;
}
.carts_goods_icon {
  display: flex;
  align-items: center;
}
.carts_goods_box {
  width: 60%;
  margin-left: 20rpx;
}
.carts_goods_box .carts_goods_title {
  font-size: 32rpx;
}
.carts_goods_box text {
  display: block;
}
.carts_goods_nature {
  font-size: 28rpx;
  color: #999;
}
.carts_goods_price {
  font-size: 28rpx;
  color: #999;
}
.carts_input {
  position: absolute;
  right: 20rpx;
  bottom: 10rpx;
  text-align: center;
}
.carts_input input {
  display: inline-block;
  width: 60rpx;
  height: 60rpx;
  border: 2rpx solid #ddd;
}
.carts_input input:nth-child(2) {
  border-right: none;
  border-left: none;
}
/* 全选／结算 */
.carts_footer {
  position: fixed;
  display: flex;
  flex-direction:row;
  overflow: hidden;
  bottom: -2rpx;
  height: 110rpx;
  line-height: 110rpx;
  background: #fff;
  width: 100%;
  z-index: 9;
}
.carts_footer_selectall {
  width: 280rpx;
}
.carts_footer_selectall icon {
  margin-left: 15rpx;
  margin-right: 15rpx;
  vertical-align: sub;
}
.carts_footer_totalprice {
  width: 100%;
  padding-left: 15rpx;
  overflow:hidden; 
  text-overflow:ellipsis;
  white-space:nowrap; 
}
.carts_footer_totalprice .carts_totalprice_text {
  color: #ff4800;
}
.carts_footer_totalprice .carts_totalprice_freight {
  padding-left: 15rpx;
  color: #999;
}
.carts_get_clearing {
  width: 220rpx;
  text-align: center;
  background: #ff4800;
  color: #fff;
  font-size: 34rpx;
}
/* 购物车为空 */
.carts_no {
  font-size: 30rpx;
  color: #999;
  text-align: center;
  margin-top: 30rpx;
}
.carts_tihsi_add {
  display: none;
  font-size: 40rpx;
  color: #999;
  text-align: center;
  margin-top: 50%;
}



