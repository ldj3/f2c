/* pages/integral_shop/personal_center/conversion_record.wxss */
.conversion_record_box {}
.conversion_record_box navigator {
  display: flex;
  background: #fff;
  padding: 20rpx;
  border-bottom:2rpx solid #ddd;
  overflow: hidden;
  
}
.conversion_box_left {
  display: inline-block;
  width: 22%;
  height: 160rpx;
}
.conversion_box_left image {
  width: 100%;
  height: 100%;
}
.conversion_box_right {
  display: inline-block;
  width: 78%;
  padding-left: 20rpx;
}
.conversion_box_right view:nth-child(1) {
  display: block;
  font-size: 30rpx;
   height: 70rpx;
  line-height: 35rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; 
  padding-top: 10rpx;
}
.conversion_box_right view:nth-child(2) {
  display: block;
  padding-top: 20rpx;
}
.conversion_box_right view:nth-child(2) text {
  font-size: 28rpx;
}
.conversion_box_right view:nth-child(2) text:nth-child(1) {
  color: #f91d17;
}
.conversion_box_right view:nth-child(2) text:nth-child(2) {
  float: right;
  color: #666666;
  font-size: 26rpx;
  padding-top: 15rpx;
}