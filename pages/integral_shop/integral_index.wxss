/* pages/integral_shop/integral_index.wxss */
page {background: #fff;}
.integral_index {

}

.head_title {
  position: fixed;
  top: 0;
  width: 100%;
  display: flex;
  flex-direction:row;
  flex-wrap: nowrap;
  height: 90rpx;
  background: #fff;
  text-align: center;
  border-bottom: 2rpx solid #aaa;
  z-index: 1;
}
.head_title_sousuo {
  display: flex;
  width: 150rpx;
  align-items: center;
  justify-content: center;
  padding-top: 30rpx;
}
.head_title_text {
  display: flex;
  align-items: center;
  width: 100%;
  color: #3f3f3f;
  font-size: 36rpx;
  overflow: hidden;
  justify-content: center;
}
.head_title_text text {
  overflow: hidden;
  word-break:keep-all;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.head_title_saomiao {
  display: flex;
  align-items: center;
  width: 150rpx;
  font-size: 36rpx;
  overflow: hidden;
  justify-content: center;
}
.head_title_saomiao image {
  width: 40rpx;
  height: 40rpx;
}
/* 广告图 */
.swiper_img {
   padding-top: 90rpx;  
}
.swiper_img swiper {
  width: 100%;
  height: 350rpx;
  position: relative;
}
.swiper_img image {
  width: 100%;
  height: 100%;
}
.swiper-tab{  
  width: 100%;  
  text-align: center;  
  line-height: 80rpx;
  background: #fff;
}  
.swiper-tab-list{  
  font-size: 30rpx;  
  display: inline-block;  
  width: 25%;  
  text-align: center;
}  
.on{ 
  color: #da7c0c;  
  border-bottom: 3rpx solid #da7c0c;
}  
.swiper-box{ 
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: hidden; 
}  
.integral_list {
  padding-bottom: 100rpx;
}
.integral_list navigator {
  display: inline-block;
  width: 45.5%;
  margin-left: 3%;
  margin-top: 20rpx;
  height: 430rpx;
  min-height: 430rpx;
  overflow: hidden;
}
/* 商品列表 */
.goods_box {
  display: inline-block;
  width: 100%;
  
}
.goods_box view:nth-child(1) {
  display: block;
  height: 300rpx;
}
.goods_box view:nth-child(1) image {
  width: 100%;
  height: 100%;
}
.goods_box view:nth-child(2) text {
  display: block;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 35rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  padding-top: 20rpx;
}
.goods_box view:nth-child(3) text {
  display: block;
  font-size: 30rpx;
  color: #da7c0c;
}
.integral_footer {
  position: fixed;
  bottom: 0;
  height: 100rpx;
  line-height: 100rpx;
  border-top: 2rpx solid #ddd;
  width: 100%;
  background: #fff;
  display: flex;
  flex-basis: row;
}
.integral_footer text {
  display: inline-block;
  font-size: 28rpx;
  color: #555;
  flex: 1;
  flex-grow: 1;
  padding-left: 20rpx;
}
.integral_footer navigator {
  display: inline-block;
  font-size: 28rpx;
  color: #fcc56b;
  margin-right: 20rpx;
}