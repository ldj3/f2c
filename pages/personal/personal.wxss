/* pages/personal/personal.wxss */
.personal {
  padding-bottom: 100rpx;
}
.personal_head_box {
  position: relative;
  overflow: hidden;
  background: linear-gradient(#ffd25f, #ffac38); /* 标准的语法 */
}
.personal_icon_center {
  position: absolute;
  left: 50rpx;
  top: 30rpx;
}
.personal_icon_center image {
  width: 60rpx;
  height: 50rpx;
}
.personal_icon_msg {
  position: absolute;
  right: 50rpx;
  top: 30rpx;
}
.personal_icon_msg image {
  width: 50rpx;
  height: 50rpx;
}
.personal_icon_msg text {
  float: right;
  margin-left: -10rpx;
  margin-top: -10rpx;
  width: 20rpx;
  height: 20rpx;
  background: #f97d3d;
  border-radius: 50%;
  display: inline-block;
}
.personal_box_name {
  padding: 140rpx 30rpx 80rpx 30rpx;
}
.personal_box_name image {
  display: inline-block;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  border:4rpx solid #fff;
}
.personal_name_text {
   position: absolute;
   left: 190rpx;
   top: 150rpx;
}
.personal_name_text text:nth-child(1) {
  color: #fff;
  font-size: 36rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
}
.personal_name_text text:nth-child(2) {
  color: #fff;
  font-size: 28rpx;
  padding: 0rpx 16rpx;
  background: #f97d3d;
  border-radius: 30rpx;
  margin-left: 30rpx;
}
.personal_my_property {
  position: absolute;
  right:-20rpx;
  top: 200rpx;
  color: #fff9e8;
  font-size: 30rpx;
  padding: 10rpx 50rpx;
  background: #b28335;
  border-radius: 30rpx;
}
/* 收藏／积分／优惠券 */
.personal_nav_list {
  display: flex;
  flex-direction:row;
  width: 100%;
  overflow: hidden;
  text-align: center;
  background: #fff;
  padding: 20rpx 0;
}
.personal_nav_list view {
  display: inline-block;
  flex:1;
  flex-grow:1;
}
.personal_nav_list view text:nth-child(1) {
  display: block;
  color: #888;
  font-size: 32rpx;
}
.personal_nav_list view text:nth-child(2) {
  display: block;
  color: #333;
}
/* 我的订单 */
.personal_order {
  display: flex;
  flex-direction:row;
  overflow: hidden;
  margin-top: 15rpx;
  line-height: 90rpx;
  background: #fff;
  padding: 0 30rpx;
  border-bottom: 2rpx solid #ededed;
}
.personal_order text:nth-child(1) {
  display: inline-block;
  flex:1;
  flex-grow:1;
  font-size: 34rpx;
}
.personal_order text:nth-child(2) {
  color: #999;
  font-size: 34rpx;
}
/* 列表一 */
.personal_order_list {
  display: flex;
  flex-direction:row;
  width: 100%;
  overflow: hidden;
  text-align: center;
  padding: 30rpx 0;
  background: #fff;
}
.personal_order_list navigator {
  display: inline-block;
  flex:1;
  flex-grow:1;
}
.personal_order_list navigator image {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin: auto;
}
.personal_order_list navigator text {
  display: block;
  font-size: 30rpx;
  margin-top: 15rpx;
  text-align: center;
}
/* 列表 */
.personal_list {
  overflow: hidden;
  padding: 0rpx 0 30rpx 0;
  background: #fff;
  margin-top: 15rpx;
}
.personal_list navigator {
  display: inline-block;
  width: 25%;
  margin-top: 30rpx;
}
.personal_list navigator image {
  display: block;
  width: 60rpx;
  height: 60rpx;
  margin: auto;
}
.personal_list navigator text {
  display: block;
  font-size: 30rpx;
  margin-top: 15rpx;
  text-align: center;
}