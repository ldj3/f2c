/* pages/personal/after_sale/after_sale_detail.wxss */
.after_sale_detail {
}
.tishi {
  margin-top: 10rpx;
  display: flex;
  padding: 20rpx 20rpx;
  background: #fff;
}
.tishi text {
  display: inline-block;
  font-size: 28rpx;
  color: #ff4903;
}
.tishi text:nth-child(1) {
  width: 80rpx;
}
.tishi text:nth-child(2) {
  width: 65%;
  padding-right: 5%;
}
.tishi navigator {
  display: inline-block;
  background: #ff4a00;
  color: #fff;
  font-size: 28rpx;
  height: 50rpx;
  line-height: 50rpx;
  padding: 0 10rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
}

.after_sale_list {
  margin-top: 10rpx;
}
.after_sale_list navigator {
  background: #fff;
  padding: 20rpx;
  display:flex;
  flex-direction:row;
  overflow:hidden;
}
.after_sale_list navigator view:nth-child(1) {
  display: inline-block;
  width: 23%;
  height: 160rpx;
}
.after_sale_list navigator view:nth-child(1) image {
  width: 100%;
  height: 100%;
}
.after_sale_list navigator view:nth-child(2) {
  display: inline-block;
  width: 77%;
  padding-left: 20rpx;
}
.after_sale_list navigator view:nth-child(2) text {
  display: block;
}
.after_sale_list navigator view:nth-child(2) text:nth-child(1) {
  padding-top: 10rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 40rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.after_sale_list navigator view:nth-child(2) text:nth-child(2) {
  font-size: 26rpx;
  padding-top: 30rpx;
  text-align: right;
}
.after_sale_text {
  margin-top: 5rpx;
  padding: 10rpx 20rpx;
  background: #fff;
}
.after_sale_text view {
  padding-left: 20rpx;
  font-size: 26rpx;
  padding-top: 5rpx;
}
.after_sale_text view:nth-child(1) {
  padding-left: 0rpx;
  font-size: 28rpx;
}
.after_sale_type {
  background: #fff;
  padding: 20rpx;
  margin-top: 5rpx;
}
.after_sale_type text {
  font-size: 28rpx;

}
.after_sale_type navigator {
  float: right;
  font-size: 26rpx;
  background: #cecece;
  color: #fff;
  border-radius: 10rpx;
  padding: 8rpx 12rpx;
}
.after_sale_explain {
  padding: 20rpx;
  background: #fff;
  margin-top: 5rpx;
}
.after_sale_explain text:nth-child(1) {
  display: block;
  font-size: 28rpx;
}
.after_sale_explain text {
  display: block;
  font-size: 26rpx;
}