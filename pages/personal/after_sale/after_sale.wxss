/* pages/personal/after_sale/after_sale.wxss */
.after_sale {
}
.after_sale_list {
  
}
.after_sale_list navigator {
  background: #fff;
  padding: 20rpx;
  display:flex;
  flex-direction:row;
  overflow:hidden;
  border-top: 2rpx solid #ddd;
}
.after_sale_list navigator view:nth-child(1) {
  display: inline-block;
  width: 23%;
  height: 160rpx;
}
.after_sale_list navigator view:nth-child(1) image {
  width: 100%;
  height: 100%;
}
.after_sale_list navigator view:nth-child(2) {
  display: inline-block;
  width: 60%;
  padding-left: 20rpx;
}
.after_sale_list navigator view:nth-child(2) text {
  display: block;
}
.after_sale_list navigator view:nth-child(2) text:nth-child(1) {
  padding-top: 10rpx;
  font-size: 30rpx;
  height: 80rpx;
  line-height: 40rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.after_sale_list navigator view:nth-child(2) text:nth-child(2) {
  font-size: 26rpx;
  color: #bdbdbd;
  padding-top: 30rpx;
}
.after_sale_list navigator view:nth-child(3) {
  display: inline-block;
  width: 17%;
  line-height: 160rpx;
}
.after_sale_list navigator view:nth-child(3) text {
  font-size: 26rpx;
  color: #f74f10;
  border-bottom: 2rpx solid #f74f10;
}