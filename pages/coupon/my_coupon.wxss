.my_coupon {
}
.swiper-tab{  
  width: 100%;  
  border-bottom: 2rpx solid #777777;  
  text-align: center;  
  line-height: 80rpx;
  position: fixed;
  top: 0;
  background: #fff;
  z-index: 9;
}  
.swiper-tab-list{  
  font-size: 30rpx;  
  display: inline-block;  
  width: 33.33%;  
  /* color: #777777;   */
  text-align: center;
}  
.on{ 
  color: #da7c0c;  
  border-bottom: 3rpx solid #da7c0c;
}  
.swiper-box{ 
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: hidden; 
}  
.swiper-box view{  
  /* text-align: center;   */
  /* line-height: 100rpx; */
}  
.my_coupon_list {
  margin-top: 80rpx;
}
.coupon_list {
  padding: 20rpx 20rpx 0 20rpx;
}
.coupon_box {
  background: #cccccc;
  padding: 20rpx;
  height: 200rpx;
}
.coupon_main {
  position: relative;
  border: 2rpx dashed #fff;
  padding: 0 20rpx;
}
.coupon_main text {
  display: block;
  color: #fff;
  padding-top: 20rpx;
}
.coupon_main text:nth-child(1) {
  font-size: 32rpx;
}
.coupon_main text:nth-child(2) {
  font-size: 26rpx;
}
.coupon_main text:nth-child(3) {
  font-size: 26rpx;
  padding-bottom: 20rpx;
}
.coupon_main .coupon_bg {
  position: absolute;
  right: -86rpx;
  top: -86rpx;
  width: 0;
  height: 0;
  border-width: 90rpx;
  border-style: solid;
  border-color: transparent transparent #a4a4a4 transparent;
  transform:rotate(45deg);
}
.coupon_main .coupon_bg text {
  position: absolute;
  right:-20rpx;
  top: 0rpx;
  font-size: 40rpx;
  transform:rotate(-45deg);
}
.coupon_main image {
  position: absolute;
  right: 100rpx;
  top: 40rpx;
  width: 100rpx;
  height: 100rpx;
}