/* 优惠券列表 */
.couponlist {

}
.couponlist_box {
  display: flex;
  flex-direction:row;
  overflow: hidden;
  margin: 20rpx 30rpx 0 30rpx;
  background: #fff;
  padding: 30rpx;
}
.couponlist_left {
  display: inline-block;
  width: 180rpx;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1px dashed #efa900;
  text-align: center;
}
.couponlist_left text {
  width: 100rpx;
  font-size: 40rpx;
}
.couponlist_right {
  position: relative;
  display: inline-block;
  flex:1;
  flex-grow:1;
  margin-left: 30rpx;
}
.couponlist_right_title {
  display: block;
  color: #555555;
  font-size: 28rpx;
  height: 70rpx;
  line-height: 35rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
  margin-top: 5rpx;
}
.couponlist_right_text {
  display: block;
  font-size: 26rpx;
  color: #ff4800;
  height: 35rpx;
  line-height: 35rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:1;
  width: 60%;
}
.couponlist_right_time {
  display: block;
  color: #999999;
  font-size: 24rpx;
  margin-top: 20rpx;
}
.couponlist_right_get {
  position: absolute;
  right: 0;
  top: 50rpx;
  border: 2rpx solid #ff4800;
  padding: 10rpx 20rpx;
  color: #ff4800;
  font-size: 24rpx;
  width: 100rpx;
  text-align: center;
}
.colorOne {
  color: #efa900;
  border: 1px dashed #efa900;
}
.colorTwo {
  color: #ef713a;
  border: 1px dashed #ef713a;
}
.colorThree {
  color: #947bf1;
  border: 1px dashed #947bf1;
}
.drawColor {
  background: #ccc;
  color: #fff;
  border-color: #ccc; 
}