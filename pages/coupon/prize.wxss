/* pages/coupon/prize.wxss */
page {
  background: #fff;
}
.swiper-tab{  
  width: 100%;  
  border-bottom: 2rpx solid #777777;  
  text-align: center;  
  line-height: 80rpx;
  position: fixed;
  top: 0;
  z-index: 9;
  background: #fff;
}  
.swiper-tab-list{  
  font-size: 30rpx;  
  display: inline-block;  
  width: 50%;  
  /* color: #777777;   */
  text-align: center;
}  
.on{ 
  color: #da7c0c;  
  border-bottom: 3rpx solid #da7c0c;
}  
.swiper-box{ 
  display: block; 
  height: 100%; 
  width: 100%; 
  overflow: hidden; 
}  
.prize_list {
  margin-top: 80rpx;
}
.prize_box {
  margin-top: 30rpx;
  padding: 0 20rpx;
  height: 220rpx;
}
.prize_box_head {
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
  display: flex;
  background: #f29494;
  border-top-right-radius: 8rpx;
  border-top-left-radius: 8rpx;
}
.prize_box_head text {
  display: inline-block;
  flex:1;
  flex-grow:1;
  color: #fff;
  font-size: 24rpx;
}
.prize_box_head text:nth-child(2) {
  text-align: right;
}
.prize_box_main {
  background: #f6f6f6;
  padding: 20rpx;
  display: flex;
  position: relative;
}
.prize_box_main view:nth-child(1) {
  display: inline-block;
  width: 18%;
  height: 120rpx;
}
.prize_box_main view:nth-child(1) image {
  width: 100%;
  height: 100%;
}
.prize_box_main view:nth-child(2) {
  display: inline-block;
  width: 60%;
  padding-left: 20rpx;
}
.prize_box_main view:nth-child(2) text:nth-child(1) {
  display: block;
  font-size: 30rpx;
  padding-top: 5rpx;
}
.prize_box_main view:nth-child(2) text:nth-child(2) {
  display: block;
  font-size: 26rpx;
  height: 70rpx;
  line-height: 35rpx;
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2;
}
.prize_box_main view:nth-child(3) {
  display: inline-block;
  width: 22%;
  text-align: right;
  line-height: 100rpx;
}
.prize_box_main view:nth-child(3) text {
  font-size: 26rpx;
}
.prize_box_main view:nth-child(4) {
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.prize_box_main view:nth-child(4) text {
  font-size: 24rpx;
  
}