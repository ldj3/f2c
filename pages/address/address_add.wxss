.address_add {
  padding-bottom: 100rpx;
}
.address_box {
  background: #fff;
  padding: 5px 0px 40rpx 0;
  margin-top: 15rpx;
}
.address_input {
  margin-top: 30rpx;
  padding: 0 30rpx;
  display: flex;
  flex-direction:row;
  overflow: hidden;
  text-align: center;
}
.address_input text {
  font-size: 30rpx;
  min-width: 160rpx;
  text-align: left;
  padding-top: 16rpx;
}
.address_input input {
  display: inline-block;
  flex:1;
  flex-grow:1;
  border: 2rpx solid #ddd;
  font-size: 28rpx;
  padding: 8rpx 20rpx; 
  text-align: left;
  color: #444;
}
.address_input textarea {
  display: inline-block;
  flex:1;
  flex-grow:1;
  border: 2rpx solid #ddd;
  font-size: 28rpx;
  padding: 20rpx 20rpx; 
  text-align: left;
  height: 200rpx;
}
.address_add_but {
  position: fixed;
  bottom: 0;
  background: #fff;
  width: 100%;
  height: 100rpx;
  text-align: center;
}
.address_add_but navigator {
  background:  coral;
  color: #fff;
  height: 100rpx;
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  display: inline-block;
  font-size: 30rpx;
}







.dialog-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 8;
  background: rgba(0, 0, 0, 0.3);
}
.date {
  min-width: 40%;
  display: flex;
  font-size: 11pt;
  color: #bdbdbd;
  align-items: center;
}
.date-btn {
  min-width: 80%;
  font-size: 12pt;
  background-color: #c4245c;
  color: #fff;
  position: fixed
}
.picker-view {
  width: 100%;
  display: flex;
  z-index:12;
  background-color: #fff;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 40vh;
}

.picker-item {
  line-height: 70rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  text-align: center;
}