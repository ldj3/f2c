/**index.wxss**/

image {
  display: inline-block;
  width: 100%;
  height: 100%;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}
.usermotto {
  margin-top: 200px;
}
.text_name {
  text-align: center;
}
.head_nav navigator {
  width: 100%;
  font-size: 30rpx;
  text-align: center;
  overflow: hidden;
}
.nav_hover {
  color: red;
  border-bottom: 2rpx solid red;
}
.nav_active {
  color: red;
  border-bottom: 2rpx solid red;
}

/* 顶部标题 */
.head_title {
  position: fixed;
  top: 0;
  width: 100%;
  display: flex;
  flex-direction:row;
  flex-wrap: nowrap;
  height: 90rpx;
  background: #fff;
  text-align: center;
  border-bottom: 2rpx solid #aaa;
  z-index: 1;
}
.head_title_sousuo {
  display: flex;
  width: 150rpx;
  align-items: center;
  justify-content: center;
  padding-top: 30rpx;
}
.head_title_text {
  display: flex;
  align-items: center;
  width: 100%;
  color: #3f3f3f;
  font-size: 36rpx;
  overflow: hidden;
  justify-content: center;
}
.head_title_text text {
  overflow: hidden;
  word-break:keep-all;
  white-space:nowrap;
  text-overflow:ellipsis;
}
.head_title_saomiao {
  display: flex;
  align-items: center;
  width: 150rpx;
  font-size: 36rpx;
  overflow: hidden;
  justify-content: center;
}
.head_title_saomiao image {
  width: 40rpx;
  height: 40rpx;
}

/* 搜索框 */
/* .search_box {
